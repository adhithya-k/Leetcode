class Solution {
public:
    bool isValid(string s) {
        
        stack<char> sk;
        
        for(int i=0;i<s.length();i++)
        {
            
            if(s[i]=='(' || s[i]=='[' || s[i]=='{')
            {
                sk.push(s[i]);
                continue;
            }
                     
            if(sk.empty()==true && (s[i]==')' || s[i]==']' || s[i]=='}'))
            {
                sk.push(s[i]);
                continue;
            }
            
                
                switch(s[i])
                {
                    case ')':
                        if(sk.top()=='[' || sk.top()=='{')
                            return 0;
                        
                        sk.pop();
                        break;
                        
                    case ']':
                        if(sk.top()=='(' || sk.top()=='{')
                            return 0;
                        
                        sk.pop();
                        break;
                        
                        
                    case '}':
                        if(sk.top()=='(' || sk.top()=='[')
                                return 0;
                        
                        sk.pop();
                        break;
                                 
                }
                   
            }
        
        return (sk.empty());
        
    }        
    
};
